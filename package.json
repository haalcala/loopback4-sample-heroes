{
  "name": "heroes",
  "version": "1.0.0",
  "description": "api",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=8.9"
  },
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "clean": "lb-clean dist tsconfig.build.tsbuildinfo",
    "lint": "npm run eslint",
    "lint:fix": "npm run eslint:fix",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run clean && npm run build",
    "test": "lb-mocha --allow-console-logs \"dist/__tests__\"",
    "posttest": "npm run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "docker:build": "docker build -t heroes .",
    "docker:run": "docker run -p 3000:3000 -d heroes",
    "migrate": "node ./dist/migrate",
    "_prestart": "npm run build",
    "start_dev": "yarn build && ts-node .",
    "start": "ts-node .",
    "prepublishOnly": "npm run test"
  },
  "repository": {
    "type": "git"
  },
  "author": "",
  "license": "",
  "files": [
    "README.md",
    "index.js",
    "index.d.ts",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@loopback/authentication": "^2.1.4",
    "@loopback/boot": "^1.4.1",
    "@loopback/build": "^2.0.0",
    "@loopback/context": "^1.19.1",
    "@loopback/core": "^1.8.2",
    "@loopback/openapi-v3": "^1.6.2",
    "@loopback/repository": "^1.7.0",
    "@loopback/rest": "^1.16.0",
    "@loopback/rest-explorer": "^1.2.2",
    "@loopback/service-proxy": "^1.2.2",
    "dotenv": "^8.0.0",
    "jsonwebtoken": "^8.5.1",
    "loopback-connector-mongodb": "^4.2.0",
    "oasgraph": "^0.14.1",
    "oasgraph-cli": "^0.4.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "shortid": "^2.2.14",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@loopback/eslint-config": "^1.1.2",
    "@loopback/testlab": "^1.6.0",
    "@types/node": "^10.14.8",
    "@types/passport": "^1.0.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/shortid": "^0.0.29",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-eslint-plugin": "^2.1.0",
    "eslint-plugin-mocha": "^5.3.0",
    "husky": "^3.0.2",
    "pretty-quick": "^1.11.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
